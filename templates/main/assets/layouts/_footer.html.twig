    </div>

    {# secondary containt  #}
    <div class="flex flex-row justify-between items-center 2xl:px-24">
        <label 
        data-theme-toggle
        tabindex="0"
        aria-labelledby="switch-name"
        role="switch"
        {% if theme.get() == "dark" %}aria-checked="true"{% else %}aria-checked="false"{% endif %}
        class="cursor-pointer w-fit flex flex-row gap-3 justify-center items-center"
        for="checkbox-switch">
            <div class="w-12 h-6 p-1 bg-gray rounded-full dark:bg-yellow items-center inline-flex">
                <div class="w-4 h-4 relative left-0 transition-transform duration-300 dark:translate-x-6 bg-white rounded-full dark:bg-black"></div>
            </div>
            <span id="switch-name"class="font-medium text-xl leading-6" {% if app.locale != "en" %} lang='en'{% endif %} >Dark mode</span>
        </label>
