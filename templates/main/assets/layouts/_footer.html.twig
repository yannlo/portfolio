            <h2 class="font-bold text-2xl ">{{ "footer.project.title" |trans }}</h2>
            <div class="w-full flex flex-row flex-wrap gap-4 justify-start ">
                {{ render(controller(
                    'App\\Controller\\Main\\ProjectController::recents', {max: 1}
                )) }}
            </div>
        </div>

