{% trans_default_domain 'layout' %}
<footer class="w-full pt-24 pb-4 px-5 sm:px-16 lg:pt-24 lg:pb-8 flex flex-col gap-16 ">
    {# main containt  #}
    <div class="w-full flex flex-col gap-12 2xl:px-24 lg:flex-row">
        {# Brand presentation #}
        <div class="flex flex-col w-full h-auto gap-6 lg:basis-1/2 justify-center items-center">
            <img class="w-full max-w-fit" data-image-with-theme src="{{ asset(image_with_theme('logo/lg.png')) }}" alt="YannLo's logo completed">
            <p>
                {{ "footer.brand" |trans }}
            </p>
        </div>

        {# Project list #}
