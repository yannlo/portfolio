    <svg {{stimulus_action('layouts/header',"close","click")}} {{ stimulus_target("layouts/header", "close") }} class=" hidden cursor-pointer w-12 transition-colors duration-300 fill-black hover:fill-red dark:fill-white dark:hover:fill-yellow lg:hidden" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
