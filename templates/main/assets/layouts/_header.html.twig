{% trans_default_domain 'layout' %}
<header  {{ stimulus_controller('layouts/header') }} stimulus class="fixed z-50 w-full top-0 right-0 left-0 flex flex-row justify-between items-center px-6 py-4 lg:px-20 xl:px-48 lg:pt-6 bg-white/90 transition-colors duration-300 dark:bg-black/90 lg:bg-white/90 dark:lg:bg-black/90">
    <a href="{{ path('app_index',{'_locale': app.locale }) }}">
        <img data-image-with-theme class ="hidden lg:inline-block min-w-min" src="{{ asset(image_with_theme('logo/md.png')) }}" alt="police of YannLo's logo">
        <img data-image-with-theme class ="inline-block lg:hidden min-w-min" src="{{ asset(image_with_theme('logo/sm.png')) }}" alt="logotype of YannLo's logo">
    </a>


    <svg {{ stimulus_action('layouts/header',"open","click") }} {{ stimulus_target("layouts/header", "open") }} class="cursor-pointer w-12 transition-colors duration-300 fill-black hover:fill-red dark:fill-white dark:hover:fill-yellow lg:hidden" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
