			<div data-popup-container class='bg-white dark:bg-black animate-open-popup-container p-8 flex flex-col gap-10 rounded-lg w-full mx-5 max-w-md'>
				<h3 id="popup-title" class="text-3xl font-medium text-center">{{ message |trans }}</h2>
			</div>
		</div>
